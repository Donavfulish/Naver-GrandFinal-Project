{
  "name": "server",
  "version": "1.0.0",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --runInBand",
    "test:watch": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --watch --runInBand",
    "test:coverage": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --coverage --runInBand",
    "start": "node server.js",
    "dev": "nodemon server.js",
    "deploy": "cross-env NODE_ENV=production node server.js",
    "db:migrate": "npx prisma migrate dev --name init",
    "db:deploy": "npx prisma migrate deploy",
    "db:reset": "npx prisma migrate reset --force",
    "db:seed": "node src/db/seed/seed.js",
    "db:setup": "npm run db:migrate && npm run db:seed",
    "db:refresh": "npm run db:reset && npm run db:seed",
    "db:init": "node src/db/system/track.system.js && node src/db/system/background.system.js && node src/db/system/clockFont.system.js  && node src/db/system/textFont.system.js"
  },
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@prisma/client": "^6.19.0",
    "bcryptjs": "^3.0.3",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "joi": "^18.0.1",
    "jsonwebtoken": "^9.0.2",
    "music-metadata": "^11.10.1",
    "node-cache": "^5.1.2",
    "prisma": "^6.19.0",
    "winston": "^3.18.3"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/supertest": "^6.0.3",
    "cross-env": "^10.1.0",
    "jest": "^30.2.0",
    "nodemon": "^3.1.11",
    "supertest": "^7.1.4"
  }
}
